<UserControl x:Class="Nonogram__wersja_graficzna_.Game"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Nonogram__wersja_graficzna_"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">

    <Grid Margin="0,10,10,0">
        <Grid HorizontalAlignment="Left" Width="320" Margin="246,99,0,20">
            <Grid.Background>
                <RadialGradientBrush>
                    <GradientStop Color="#FF6FA1B7" Offset="1"/>
                    <GradientStop Color="#FF29373E" Offset="0"/>
                    <GradientStop Color="#FF2990BF" Offset="0.517"/>
                    <GradientStop Color="#FF298BB8" Offset="0.317"/>
                    <GradientStop Color="#FFC4E1EF" Offset="0.674"/>
                    <GradientStop Color="#FF64A7DA" Offset="0.878"/>
                </RadialGradientBrush>
            </Grid.Background>
            <Grid x:Name="buttonGrid" Height="301" VerticalAlignment="Center" Margin="10,0,10,0" />
        </Grid>

        <StackPanel x:Name="Buttons" Margin="619,220,11,80" >
            <StackPanel.Resources>
                <ResourceDictionary>
                    <ResourceDictionary.MergedDictionaries>
                        <ResourceDictionary Source="Themes/MetroDark/MetroDark.MSControls.Core.Implicit.xaml" />
                        <ResourceDictionary Source="Themes/MetroDark/MetroDark.MSControls.Toolkit.Implicit.xaml" />
                    </ResourceDictionary.MergedDictionaries>
                </ResourceDictionary>
            </StackPanel.Resources>
            <Button Content="New Game"  Width="125"  Margin="0,0,0,5" HorizontalAlignment="Center"  Foreground="White" FontFamily="Cascadia Mono SemiBold" Background="#FF86A7AB" BorderBrush="Red"/>
            <Button Content="Load Game"  Width="125" Margin="0,0,0,5" Foreground="White" FontFamily="Cascadia Mono SemiBold"/>
            <Button Content="Exit To Menu"  Margin="0,0,0,5" Width="125" Foreground="White" FontFamily="Cascadia Mono SemiBold" RenderTransformOrigin="0.5,0.5"/>
            <Button Content="Exit"  Margin="0,0,0,5" Width="125" Foreground="White" FontFamily="Cascadia Mono SemiBold"/>

        </StackPanel>
    </Grid>
</UserControl>
